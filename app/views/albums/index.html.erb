<h1>Listing albums</h1>
 <div id="splash-container">
    <% @albums.each do |album| %>
    <div>
      <h2><%= album.title %></h2>
      <%= image_tag album.coverlink %>
      <p><%= album.artist %></p>
      <p><%= album.year %></p>
      <p><%= album.description %></p>
      <p><%= link_to 'Show', album_path(album) %></p>
    </div>
  </div>
<% end %>